<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="true" enabled="true" name="AM-AccountCancellation">
    <DisplayName>AM-AccountCancellation</DisplayName>
    <FaultRules/>
    <Properties/>
    <Set>
        <Headers>
            <Header name="Authorization">{private.Authorization.cards.manager}</Header>
            <Header name="Accept">application/vnd.c6bank+json; version=2</Header>
        </Headers>
        <Payload contentType="application/json">
            {
                "account_status": "{cancelAccountPayload.accountStatus}"
            }
        </Payload>
        <Verb>POST</Verb>
        <Path>/account/{account.id}/cancel</Path>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo type="request" transport="http" createNew="false">request</AssignTo>
</AssignMessage>
