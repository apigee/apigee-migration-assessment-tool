<?xml version="1.0" encoding="utf-8"?>
<AssignMessage async="false" continueOnError="true" enabled="true" name="AM-NotifyCardInvoicePayment">
	<DisplayName>AM-NotifyCardInvoicePayment</DisplayName>
	<FaultRules></FaultRules>
	<Properties></Properties>
	<Set>
		<Headers>
			<Header name="Authorization">{private.Authorization.cards.payments}</Header>
			<Header name="Accept">application/json</Header>
		</Headers>
		<Payload contentType="application/json">{
             "account_id": "{payload.account_id}",
             "value": {payload.value},
             "reference_id": "{payload.reference}"
            }</Payload>
		<Verb>POST</Verb>
		<Path>/account/financial-adjustment</Path>
	</Set>
	<IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
	<AssignTo type="request" transport="http" createNew="false">request</AssignTo>
</AssignMessage>