<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Single-Registry">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="Single-Registry">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-UpdateIndividual</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/**")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/single-registry</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>SingleRegistry</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
