<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="ProposalStatus">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="ProposalStatus">
            <Description>Get the proposal status from lake</Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-GetCPF</Name>
                </Step>
                <Step>
                    <Condition>(cpf = null or cpf = "")</Condition>
                    <FaultRules/>
                    <Name>RF-DocumentCPFRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-ProposalStatus</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/proposal-status</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="ProposalStatusService">
        <TargetEndpoint>ProposalStatusService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
