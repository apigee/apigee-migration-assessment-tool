<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Atomics-Documents">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="PostDocuments">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SC-AtomicsTokenGenerate</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-ExtractAtomicsToken</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-AtomicsUploadRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/documents") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="GetDocuments">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-GetAtomicsProcessNumber</Name>
                </Step>
                <Step>
                    <Condition>(payload.process_number = null or payload.process_number = "")</Condition>
                    <FaultRules/>
                    <Name>RF-BadRequestProcessNumberNotFound</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SC-AtomicsTokenGenerate</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-ExtractAtomicsToken</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-AtomicsSearchRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/documents/**") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/atomics</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="AtomicsService">
        <Condition>(proxy.pathsuffix MatchesPath "/documents") or (proxy.pathsuffix MatchesPath "/documents/**")</Condition>
        <TargetEndpoint>AtomicsService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
