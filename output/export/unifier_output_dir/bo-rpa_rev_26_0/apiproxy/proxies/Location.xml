<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Location">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="GetAddress">
            <Description>Retrieves the address information via zip code</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/*") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>KV-LoadLocationServiceCredentials</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>EV-ZipCodeFromURI</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>AM-GetAddressByZipCode</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/locations</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="LocationService">
        <TargetEndpoint>LocationService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
