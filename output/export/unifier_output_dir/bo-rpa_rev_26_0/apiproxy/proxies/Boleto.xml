<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Boleto">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="GenerateBoleto">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadBoletoServiceCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-GenerateBoleto</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="GetBoletosByPayer">
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>EV-GetBoletosByPayer</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadBoletoServiceCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-GetBoletosByPayer</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/payer/*/search") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/boletos</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="BoletoService">
        <TargetEndpoint>BoletoService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
