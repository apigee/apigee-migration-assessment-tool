<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Checking-Account">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="CancelAccount">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-UserInformation</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SC-GetPersonID</Name>
                </Step>
                <Step>
                    <Condition>(personDataResponse.status.code == 404)</Condition>
                    <FaultRules/>
                    <Name>RF-PersonNotFound</Name>
                </Step>
                <Step>
                    <Condition>(personDataResponse == null) or (personDataResponse.status.code != 200)</Condition>
                    <FaultRules/>
                    <Name>RF-CancelAccountError</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-PersonInformation</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-CheckingAccountCancellationData</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-CheckingAccountCancellation</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/cancel") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="CancelAccountV2">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>EV-CheckingAccountCancellationData</Name>
                </Step>
                <Step>
                    <Condition>(person.person_id = null or person.person_id = "")</Condition>
                    <FaultRules/>
                    <Name>RF-PersonIdRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-CheckingAccountCancellation</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/v2/cancel") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="ReactiveAccount">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-UserInformation</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SC-GetPersonID</Name>
                </Step>
                <Step>
                    <Condition>(personDataResponse.status.code == 404)</Condition>
                    <FaultRules/>
                    <Name>RF-PersonNotFound</Name>
                </Step>
                <Step>
                    <Condition>(personDataResponse == null) or (personDataResponse.status.code != 200)</Condition>
                    <FaultRules/>
                    <Name>RF-ReactiveAccountError</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-PersonInformation</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-CheckingAccountReactivationData</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-CheckingAccountReactivation</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/reactive") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="BlockAccount">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-CheckingAccountBlockData</Name>
                </Step>
                <Step>
                    <Condition> (payload.branch_number = null or payload.account_number = null or payload.reason_id = null or payload.request_by = null or payload.request_by = "")</Condition>
                    <FaultRules/>
                    <Name>RF-BlockAccountFieldsRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-CheckingAccountBlock</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/block") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Debit">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadBackofficeCodes</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-DebitCreditCheckingAccount</Name>
                </Step>
                <Step>
                    <Condition> (payload.branch_number = null or payload.branch_number = "" 
                    or payload.account_number = null or payload.account_number = "" 
                    or payload.amount = null or payload.amount = "" 
                    or payload.historic = null or payload.historic = "" 
                    or payload.historic_complement = null or payload.historic_complement = "" 
                    or payload.details = null or payload.details = "" 
                    or payload.reference = null or payload.reference = "" )</Condition>
                    <FaultRules/>
                    <Name>RF-DebitCreditCheckingAccountFieldsRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>JS-ValidHistoricCode</Name>
                </Step>
                <Step>
                    <Condition>(isValidCode is false)</Condition>
                    <FaultRules/>
                    <Name>RF-InvalidHistoricCode</Name>
                </Step>
                <Step>
                    <Condition>(request.header.TRANSACTIONAL-ID == null)</Condition>
                    <FaultRules/>
                    <Name>AM-DebitCreditCheckingAccount</Name>
                </Step>
                <Step>
                    <Condition>(request.header.TRANSACTIONAL-ID != null)</Condition>
                    <FaultRules/>
                    <Name>AM-DebitCheckingAccountTransactionID</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>((proxy.pathsuffix MatchesPath "/debit/fraud") 
            or (proxy.pathsuffix MatchesPath "/debit/card/fee") 
            or (proxy.pathsuffix MatchesPath "/debit/paygo"))
            and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Credit">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadBackofficeCodes</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-DebitCreditCheckingAccount</Name>
                </Step>
                <Step>
                    <Condition> (payload.branch_number = null or payload.branch_number = "" 
                    or payload.account_number = null or payload.account_number = "" 
                    or payload.amount = null or payload.amount = "" 
                    or payload.historic = null or payload.historic = "" 
                    or payload.historic_complement = null or payload.historic_complement = "" 
                    or payload.details = null or payload.details = "" 
                    or payload.reference = null or payload.reference = "" )</Condition>
                    <FaultRules/>
                    <Name>RF-DebitCreditCheckingAccountFieldsRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>JS-ValidHistoricCode</Name>
                </Step>
                <Step>
                    <Condition>(isValidCode is false)</Condition>
                    <FaultRules/>
                    <Name>RF-InvalidHistoricCode</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-DebitCreditCheckingAccount</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>((proxy.pathsuffix MatchesPath "/credit/paygo") 
            or (proxy.pathsuffix MatchesPath "/credit/bill")
            or (proxy.pathsuffix MatchesPath "/credit/cashback-atomos"))
            and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="TransferTed">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-TransferTedCheckingAccount</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/branches/*/accounts/*/transfer/ted/server") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="DebitReversal">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>EV-DebitReversalCheckingAccount</Name>
                </Step>
                <Step>
                    <Condition>(payload.accounting_date = null or payload.accounting_date = "")</Condition>
                    <FaultRules/>
                    <Name>RF-DebitReversalRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-DebitReversalCheckingAccount</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/branches/*/accounts/*/debit/*/reversal") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="GetAccountId">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-BranchAndAccountNumber</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-GetAccountCheckingAccount</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <FaultRules/>
                    <Name>EV-ExtractAccountIdResponse</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-BuildCheckingAccountIdResponse</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/branches/*/accounts/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="AccountStatus">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-PersonId</Name>
                </Step>
                <Step>
                    <Condition>(payload.person_id = null or payload.person_id = "")</Condition>
                    <FaultRules/>
                    <Name>RF-PersonIdRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-AccountStatusCheckingAccount</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/account-status") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="GetStatementPdf">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-StatementPdf</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/statement/pdf/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="PixAddressing">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-PixAddressing</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/pix/addressing/**")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/checking-account</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="CheckingAccountService">
        <Condition>(proxy.pathsuffix MatchesPath "/branches/*/accounts/**") 
        or (proxy.pathsuffix MatchesPath "/debit/fraud") 
        or (proxy.pathsuffix MatchesPath "/debit/card/fee") 
        or (proxy.pathsuffix MatchesPath "/debit/paygo") 
        or (proxy.pathsuffix MatchesPath "/credit/paygo") 
        or (proxy.pathsuffix MatchesPath "/credit/bill")
        or (proxy.pathsuffix MatchesPath "/credit/cashback-atomos")
        or (proxy.pathsuffix MatchesPath "/account-status")</Condition>
        <TargetEndpoint>CheckingAccountService</TargetEndpoint>
    </RouteRule>
    <RouteRule name="CheckingAccountDocumentManagerService">
        <Condition>(proxy.pathsuffix MatchesPath "/statement/pdf/*")</Condition>
        <TargetEndpoint>CheckingAccountDocumentManagerService</TargetEndpoint>
    </RouteRule>
    <RouteRule name="CheckingAccountManagerService">
        <TargetEndpoint>CheckingAccountManagerService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
