<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Offers">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="CreateUpgradeAccountOffer">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-OfferInformation</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-UserInformation</Name>
                </Step>
                <Step>
                    <Condition>(offer.cpf = null) OR (offer.product_id = null) or (user.cpf = null)</Condition>
                    <FaultRules/>
                    <Name>RF-InvalidUpgradeOffer</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SC-GetPersonID</Name>
                </Step>
                <Step>
                    <Condition>(personDataResponse.status.code == 404)</Condition>
                    <FaultRules/>
                    <Name>RF-PersonNotFound</Name>
                </Step>
                <Step>
                    <Condition>(personDataResponse == null) or (personDataResponse.status.code != 200)</Condition>
                    <FaultRules/>
                    <Name>RF-OffersError</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-PersonInformation</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SC-GetProducts</Name>
                </Step>
                <Step>
                    <Condition>(productDataResponse == null) or (productDataResponse.status.code != 200)</Condition>
                    <FaultRules/>
                    <Name>RF-OffersError</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>JS-VerifyElegibleOffer</Name>
                </Step>
                <Step>
                    <Condition>(products.upgraded_account = true)</Condition>
                    <FaultRules/>
                    <Name>RF-AccountAlreadyUpgraded</Name>
                </Step>
                <Step>
                    <Condition>(products.payment_account = false) AND (products.payment_postpaid = false)</Condition>
                    <FaultRules/>
                    <Name>RF-ClientNotElegible</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-CreateUpgradeOffer</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/upgrade-account-offer") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/offers</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="OfferManagerService">
        <TargetEndpoint>OfferManagerService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
