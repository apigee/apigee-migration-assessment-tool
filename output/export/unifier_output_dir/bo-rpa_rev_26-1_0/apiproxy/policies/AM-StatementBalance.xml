<?xml version="1.0" encoding="utf-8"?>
<AssignMessage async="false" continueOnError="true" enabled="true" name="AM-StatementBalance">
	<DisplayName>AM-StatementBalance</DisplayName>
	<FaultRules></FaultRules>
	<Properties></Properties>
	<Set>
		<Headers>
			<Header name="Authorization">{private.Authorization.statement.account}</Header>
		</Headers>
		<Verb>GET</Verb>
		<Path>/branches/{payload.branch_number}/accounts/{payload.account_number}/balance</Path>
	</Set>
	<IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
	<AssignTo type="request" transport="http" createNew="false">request</AssignTo>
</AssignMessage>