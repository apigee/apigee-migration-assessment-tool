<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Checking-Account-Manager">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="Reactivate">
            <Description>Endpoint to reactivate an account</Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-PersonIdAndRequestBy</Name>
                </Step>
                <Step>
                    <Condition>(person_id = null or person_id = "")</Condition>
                    <FaultRules/>
                    <Name>RF-PersonIdRequired</Name>
                </Step>
                <Step>
                    <Condition>(request_by = null or request_by = "")</Condition>
                    <FaultRules/>
                    <Name>RF-RequestByRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-CheckingAccountReactivationV2</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/reactivate" and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>KV-LoadServicesCredentials</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>AM-CheckingAccountManager</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/checking-account-manager</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="CheckingAccountManagerService">
        <TargetEndpoint>CheckingAccountManagerService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
