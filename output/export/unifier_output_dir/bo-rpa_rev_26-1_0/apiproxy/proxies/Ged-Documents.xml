<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Ged-Documents">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="Documents">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>EV-PersonIdRequest</Name>
                </Step>
                <Step>
                    <Condition>(person.person_id == null or person.person_id = "")</Condition>
                    <FaultRules/>
                    <Name>RF-PersonIdRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-GetGedDocumentsRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "POST" or request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Documents-Resources">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>EV-ExtractPersonIdDocumentId</Name>
                </Step>
                <Step>
                    <Condition>(payload.person_id == null or payload.person_id = "") or (payload.document_id == null or payload.document_id = "") or (payload.resource_id == null or payload.resource_id = "")</Condition>
                    <FaultRules/>
                    <Name>RF-BadRequestDocumentsResource</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-GetGedDocumentResourceRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/resources") and (request.verb = "POST" or request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/ged/documents</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="GedService">
        <TargetEndpoint>GedService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
