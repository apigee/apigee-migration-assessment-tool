<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RF-Custom_Errors">
    <DisplayName>RF-Custom_Errors</DisplayName>
    <Properties/>
    <FaultResponse>
        <Set>
            <Headers/>
            <Payload contentType="application/json">
                {
                    "errorMessage": "{flow.error.message}",
                    "errorReason":"{flow.error.reason}",
                    "errorStatus":{flow.error.status}
               }
            </Payload>
            <ReasonPhrase>{flow.error.httpReasonPhrase}</ReasonPhrase>
            <StatusCode>{flow.error.status}</StatusCode>
        </Set>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>