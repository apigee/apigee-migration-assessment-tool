<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MessageLogging async="false" continueOnError="false" enabled="true" name="ML-Logging-Loggly-Error">
    <DisplayName>ML-Logging-Loggly-Error</DisplayName>
    <Syslog>
        <Message>[{logging.loggly.key}@41058] {flow.log.message.content}</Message>
        <Host>logs-01.loggly.com</Host>
        <Port>514</Port>
        <Protocol>TCP</Protocol>
        <FormatMessage>true</FormatMessage>
    </Syslog>
    <!-- INFO (default), ALERT, WARN, ERROR -->
    <logLevel>ERROR</logLevel>
</MessageLogging>