<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>VAK-VerifyAPIKey</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="GetAccessToken-CC">
            <Condition>proxy.pathsuffix == "/oauth/token" and verifyapikey.VAK-VerifyAPIKey.grant_type == "client_credentials"</Condition>
            <Request>
                <!--Implement Client Credentials Grant type policies here.-->
            </Request>
        </Flow>
        <Flow name="GetAccessToken-AC">
            <Condition>proxy.pathsuffix == "/oauth/token" and verifyapikey.VAK-VerifyAPIKey.grant_type == "auth_code"</Condition>
            <Request>
                <!--Implement Authorization Code Grant type policies here.-->
            </Request>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/tcs-bom-oauth-1</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>