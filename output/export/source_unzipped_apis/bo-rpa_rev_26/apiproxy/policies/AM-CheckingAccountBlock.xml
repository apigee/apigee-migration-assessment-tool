<?xml version="1.0" encoding="utf-8"?>
<AssignMessage async="false" continueOnError="true" enabled="true" name="AM-CheckingAccountBlock">
	<DisplayName>AM-CheckingAccountBlock</DisplayName>
	<FaultRules></FaultRules>
	<Properties></Properties>
	<Set>
		<Headers>
			<Header name="Authorization">{private.Authorization.checking.manager}</Header>
		</Headers>
		<Payload contentType="application/json">{
                "reason_id": "{payload.reason_id}",
                "request_by": "{payload.request_by}"
            }</Payload>
		<Verb>POST</Verb>
		<Path>/branches/{payload.branch_number}/accounts/{payload.account_number}/block</Path>
	</Set>
	<IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
	<AssignTo type="request" transport="http" createNew="false">request</AssignTo>
</AssignMessage>