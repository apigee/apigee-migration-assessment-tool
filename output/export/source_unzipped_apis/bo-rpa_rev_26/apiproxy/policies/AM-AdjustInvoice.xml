<?xml version="1.0" encoding="utf-8"?>
<AssignMessage async="false" continueOnError="true" enabled="true" name="AM-AdjustInvoice">
	<DisplayName>AM-AdjustInvoice</DisplayName>
	<FaultRules></FaultRules>
	<Properties></Properties>
	<Set>
		<Headers>
			<Header name="Authorization">{private.Authorization.cards.payments}</Header>
			<Header name="Accept">application/json</Header>
		</Headers>
		<Payload contentType="application/json">{
             "adjustment_type_id": 2,
             "adjustment_date": "{payload.adjustment_date}",
             "adjustment_value": {payload.adjustment_value}
            }</Payload>
		<Verb>POST</Verb>
		<Path>/account/{payload.account_id}/financial/adjustment</Path>
	</Set>
	<IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
	<AssignTo type="request" transport="http" createNew="false">request</AssignTo>
</AssignMessage>