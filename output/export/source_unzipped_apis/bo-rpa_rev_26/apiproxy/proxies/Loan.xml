<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Loan">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="GetLoan">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-PersonIdFromURI</Name>
                </Step>
                <Step>
                    <Condition>(payload.person_id == null)</Condition>
                    <FaultRules/>
                    <Name>RF-BadRequestPersonId</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SC-GetCoreBankingInformation</Name>
                </Step>
                <Step>
                    <Condition>(coreBankingResponse.status.code == 404)</Condition>
                    <FaultRules/>
                    <Name>RF-PersonNotFound</Name>
                </Step>
                <Step>
                    <Condition>(coreBankingResponse == null) or (coreBankingResponse.status.code != 200)</Condition>
                    <FaultRules/>
                    <Name>RF-GetLoanError</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>JS-ExtractPessoaID</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-GetLoan</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <FaultRules/>
                    <Name>JS-ExtractLoanID</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-GetLoanResponse</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Broker">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-LoansService</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/**")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/loan</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="LoanService">
        <TargetEndpoint>LoanService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
