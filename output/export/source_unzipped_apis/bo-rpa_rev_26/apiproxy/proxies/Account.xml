<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Account">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="Accounts">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>EV-GetTaxIdentifierAndType</Name>
                </Step>
                <Step>
                    <Condition> (payload.tax_identifier = "" or payload.tax_identifier = null or payload.person_type = "" or payload.person_type = null ) </Condition>
                    <FaultRules/>
                    <Name>RF-BadRequestTaxIdentifierAndTypeRequired</Name>
                </Step>
                <Step>
                    <Condition>(payload.person_type !~~ "(?i)^pf$" and payload.person_type !~~ "(?i)^pj$")</Condition>
                    <FaultRules/>
                    <Name>RF-BadRequestPersonType</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <Condition>(payload.person_type ~~ "(?i)^pf$")</Condition>
                    <FaultRules/>
                    <Name>AM-GetPersonIdByCpfRequest</Name>
                </Step>
                <Step>
                    <Condition>(payload.person_type ~~ "(?i)^pj$")</Condition>
                    <FaultRules/>
                    <Name>AM-GetPersonIdByCnpjRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response>
            <Step>
                <FaultRules/>
                <Name>EV-GetAccountPersonId</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>AM-BuildResponsePersonId</Name>
            </Step>
        </Response>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/accounts</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>SingleRegistry</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
