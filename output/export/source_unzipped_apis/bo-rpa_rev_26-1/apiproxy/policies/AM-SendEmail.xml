<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM-SendEmail">
    <DisplayName>AM-SendEmail</DisplayName>
    <FaultRules/>
    <Properties/>
    <Set>
        <Headers>
            <Header name="Content-Type">application/json</Header>
            <Header name="Authorization">{private.Authorization.backoffice.rpa}</Header>
        </Headers>
        <Payload contentType="application/json">{request.content}</Payload>
        <Verb>POST</Verb>
        <Path>/case-manager/email-message</Path>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo type="request" transport="http" createNew="true">request</AssignTo>
</AssignMessage>
