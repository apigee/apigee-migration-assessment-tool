<?xml version="1.0" encoding="utf-8"?>
<AssignMessage async="false" continueOnError="true" enabled="true" name="AM-SendInvoice">
	<DisplayName>AM-SendInvoice</DisplayName>
	<FaultRules></FaultRules>
	<Properties></Properties>
	<Set>
		<Headers>
			<Header name="Authorization">{private.Authorization.core.cards}</Header>
			<Header name="Accept">Application/json;version=1</Header>
		</Headers>
		<Payload contentType="application/json">{
                "period": "{payload.period}"
            }</Payload>
		<Verb>POST</Verb>
		<Path>/person/invoices/{payload.person_id}/pdf</Path>
	</Set>
	<IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
	<AssignTo type="request" transport="http" createNew="false">request</AssignTo>
</AssignMessage>