<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Token">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="GetToken">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>OA-GenerateAccessToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Condition>(request.verb NotEquals "POST")</Condition>
                <FaultRules/>
                <Name>RF-NotFoundToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/auth</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>
