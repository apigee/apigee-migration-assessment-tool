<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Backoffice-Rpa">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="CheckPhoneEligibility">
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>EV-CheckPhoneEligibility</Name>
                </Step>
                <Step>
                    <Condition> (phone.phone_number = "" or phone.phone_number = null ) </Condition>
                    <FaultRules/>
                    <Name>RF-BadRequestPhoneNumberRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-CheckPhoneEligibility</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/block-list") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="SFCaseManagerCreate">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-CreateCases</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/case-manager/create-case") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="SFCaseManagerAttachFile">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>EV-AttachFileData</Name>
                </Step>
                <Step>
                    <Condition>(payload.parent_record_id = null or payload.parent_record_id = "" or payload.content_name = null or payload.content_name = ""  or payload.file_base64 = null or payload.file_base64 = "")</Condition>
                    <FaultRules/>
                    <Name>RF-AttachFileFieldsRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-AttachFile</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/case-manager/content-version") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="SFCaseManagerSendEmail">
            <Description></Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-SendEmail</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/case-manager/email-message") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/crm-backoffice-rpa</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>BackofficeRpaService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
