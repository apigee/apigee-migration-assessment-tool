<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Statement">
    <Description></Description>
    <FaultRules/>
    <Flows>
        <Flow name="Balance">
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>KV-LoadServicesCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>EV-StatementtBalance</Name>
                </Step>
                <Step>
                    <Condition>(payload.branch_number = null) or (payload.account_number = null)</Condition>
                    <FaultRules/>
                    <Name>RF-BalanceStatementFieldsRequired</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>AM-StatementBalance</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/branches/*/accounts/*/balance") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/bo-rpa/statement</BasePath>
        <Properties/>
        <VirtualHost>vhost-backoffice</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="StatementService">
        <TargetEndpoint>StatementService</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
